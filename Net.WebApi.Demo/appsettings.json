{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // 初始化配置
  "Initial": {
    "Name": "Tw Asp.Net Demo", // 项目名称, 默认Asp.Net Demo
    "SwaggerDlls": [ // Swagger程序集配置, 默认空数组
      "Net.WebApi.Demo",
      "Net.WebApi.Demo.Model"
    ],
    "AutoDiDlls": [], // 自动依赖注入的程序集配置, 默认空数组
    "TaskLimit": 0, // task任务最大数量限制. 默认null(不限制). <=0表示使用逻辑处理器的数量作为限制值
    "ReturnHeaderDate": { // 返回头日期时间配置
      "Format": "yyyy-MM-dd HH:mm:ss zzz", // 格式, 默认yyyy-MM-dd HH:mm:ss zzz(年-月-日 时:分:秒 时区)
      "TimezoneOffset": 8 // 时区偏移量, 默认+8(东八区)
    }
  }
}